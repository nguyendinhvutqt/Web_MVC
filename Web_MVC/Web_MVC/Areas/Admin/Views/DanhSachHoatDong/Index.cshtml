@model IEnumerable<Web_MVC.Models.Activity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="col-xl-12">
        <h2>Danh sách hoạt động</h2>
        <a href="~/Admin/DanhSachHoatDong/ThemMoi" class="btn btn-success">Thêm mới</a>
    </div>
    <div class="col-xl-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Image)" alt="img" style="width: 60px; height: 60px" />
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "ChiTiet", new { id = item.ID }) |
                        @Html.ActionLink("Xoá", "Xoa", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="pagination-container">
        @Html.Partial("~/Areas/Admin/Views/Shared/Pagination.cshtml", new { currentPage = ViewBag.CurrentPage, totalPages = ViewBag.TotalPages })
    </div>
</div>

