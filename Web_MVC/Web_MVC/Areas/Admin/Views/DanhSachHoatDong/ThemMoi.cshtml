@model Web_MVC.Models.Activity

@{
    ViewBag.Title = "Thêm mới hoạt động";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="col-xl-12">
        <h2>Danh sách hoạt động</h2>
    </div>
    <div class="col-xl-12">
        @using (Html.BeginForm("ThemMoi", "DanhSachHoatDong", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                <div class="col-xl-12">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                <div class="col-xl-12">
                    <textarea type="Text" id="inputNoiDung" name="Description" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                <div class="col-xl-12">
                    <input type="file" name="file" accept=".jpg,.jpeg,.png" />
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-xl-12 mt-3">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
        </div>
        }
    </div>
</div>

@section DesProduct {
    <script>
        CKEDITOR.replace('inputNoiDung', {
            htmlEncodeOutput: true
        })
    </script>
}