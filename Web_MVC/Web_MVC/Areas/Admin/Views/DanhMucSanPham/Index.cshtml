@model IEnumerable<Web_MVC.Models.ProductsCatalog>

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
}

<div class="container">
    <div class="com-xl-12">
        <h2>Danh mục sản phẩm</h2>
        <a class="btn btn-success" href="~/Admin/DanhMucSanPham/ThemMoi">Thêm mới</a>
    </div>
    <div class="com-xl-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Sua", new { id = item.ID }) |
                        @Html.ActionLink("Xoá", "Xoa", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    
    <div class="pagination-container">
        @Html.Partial("~/Areas/Admin/Views/Shared/Pagination.cshtml", new { currentPage = ViewBag.CurrentPage, totalPages = ViewBag.TotalPages })
    </div>
</div>

