@model Web_MVC.Models.ProductsCatalog

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="com-xl-12">
        <h2>Thêm mới danh mục sản phẩm</h2>
    </div>
    <div class="com-xl-12">
        @using (Html.BeginForm("ThemMoi", "DanhMucSanPham", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                    <div class="col-xl-12">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-xl-12 mt-3">
                        <Button type="submit" class="btn btn-success">Thêm mới</Button>
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>




