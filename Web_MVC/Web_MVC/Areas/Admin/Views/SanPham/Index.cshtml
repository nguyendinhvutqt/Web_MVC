@model IEnumerable<Web_MVC.Models.Product>
@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
}

<div class="container">
    <div class="com-xl-12">
        <h2>Danh sách sản phẩm</h2>
        <a class="btn btn-success mt-2" href="~/Admin/SanPham/ThemMoi">Thêm mới</a>
    </div>
    <div class="com-xl-12 mt-3">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsCatalog.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Image)" alt="Avatar" style="width: 60px; height: 60px">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductsCatalog.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Sua", new { id = item.ID }) |
                        @Html.ActionLink("Xoá", "Xoa", new { id = item.ID })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="pagination-container">
        @Html.Partial("~/Areas/Admin/Views/Shared/Pagination.cshtml", new { currentPage = ViewBag.CurrentPage, totalPages = ViewBag.TotalPages })
    </div>
</div>
